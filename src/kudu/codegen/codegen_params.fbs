namespace kudu.fbs;

struct IndexPair {
  first: int;
  second: int;
}

struct CellInfo {
  physical_type: int;
  offset: uint;
  size: uint;
  nullable: bool;
  read_default_ptr: ulong;
  write_default_ptr: ulong;
}

table RowProjectorParam {
  for_read: bool;
  base_cols_mapping: [IndexPair];
  default_cols: [uint];

  src_null_bitmap_offset: uint;
  src_cell_info: [CellInfo];
  dst_cell_info: [CellInfo];
}

table SerializeRowBlockParam {
  dst_to_src_idx_mapping: [uint];
  dst_cols: [CellInfo];
  dst_row_stride: uint;
  offset_to_null_bitmap: uint;
}